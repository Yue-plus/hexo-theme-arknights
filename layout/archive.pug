
extends includes/layout.pug

block content
  -
    const categoriesList = list_categories({
      order: 1
      , show_count: theme.archives.categories_count
    })
  -
    const tagsList = list_tags({
      order: -1
      , show_count: theme.archives.tags_count
    })
  -
    const archivesList = list_archives({
      type: 'yearly'
      , order: -1
      , show_count: false
    })

  #archive-flex
    #Archives
      h1 archives
      #Archives-bg
        - let year
        - page.posts.each(function (article) {
          - let yearMonth = date(article.date, 'YYYY-MM')
          if yearMonth !== year
            - year = yearMonth
            h2= year
          .article-item
            time= date(article.date, 'MM-DD')
            a(href=url_for(article.path) target="_blank")
              = article.title || 'No Title'
        - })
        if config.per_page != 0
          #paginator!= paginator()
    #archive-aside
      #Categories
        h1 categories
        if categoriesList
          != categoriesList
        else
          p None.
      #Tags
        h1 tags
        if tagsList
          != tagsList
        else
          p None.

block aside-block
  h1 NAVIGATION
  #navigation
    a(href='#Archives') Archives
    a(href='#Categories') Categories
    a(href='#Tags') Tags
