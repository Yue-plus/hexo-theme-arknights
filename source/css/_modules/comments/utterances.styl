#utterances
  position relative
  box-sizing border-box
  width 100%
  max-width 760px
  margin-left auto
  margin-right auto
  
  *
    cursor var(--cursor-data) 3 3, default !important
  
  a, button, svg, [role="button"]
    cursor var(--cursor-data) 3 3, pointer !important
  
  input, textarea
    cursor var(--cursor-data) 3 3, text !important

.utterances-frame
  color-scheme light
  position absolute
  left 0
  right 0
  width 1px
  min-width 100%
  max-width 100%
  height 100%
  border 0
  cursor var(--cursor-data) 3 3, default !important