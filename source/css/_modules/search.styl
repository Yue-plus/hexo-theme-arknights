.search-header
  overflow hidden
  box-sizing border-box
  position relative
  transition .3s
  input
    box-sizing border-box
    color #fff
    position relative
    &::placeholder
      transition .3s
    font-size 15px
    height 40px
    padding 0 10px
    background-color unset
    border unset
    outline none
    width calc(100% + 10px)
.moved input
  animation get-in .6s
.navItem
  transition .6s

.search
  transition .6s
  .navItem.search-header
    width calc(100% - 3em)
    transition .6s
    position absolute
    top 40px
    transform unset
    input
      animation get-out .6s

@media ( max-width 1023px )
  .search .navItem.search-header
    top 38px
    width calc(100% - 4em)
  .search-header
    padding 0 0 6px 2rem
    &::after
      content ""
      display block
      width 100%
      height 0
      border-bottom 2px solid #ffffff

@media ( min-width 1024px )
  .search-popup
    background-color rgba(20,21,22,.95)
  .search-header
    &::after
      transition .3s
      z-index -1
      content ""
      display block
      width 0px
      height 100%
      top 0
      position absolute
      border-color #fff
    &:hover
      input::placeholder
        transition .3s
        color #000
      &::after
        transition .3s
        width calc(100% + 10px)
        background-color #2bf

.search-popup
  pointer-events all
  height calc(100% - 80px)
  z-index 20
  &.open
   transform translateX(0%)
  transition .6s
  scrollbar-width thin
  position fixed
  top 80px
  @media ( max-width 1023px )
    width 428px
    max-width 100%
  width 32%
  padding 0 0 0 1px
  overflow-y auto
  #loading p
    text-align center
  #search-result
    width 100%
    .recent-post
      font-family 'JetBrains Mono'
      margin 0
      padding 8px
      border none
      border-top 1px solid rgba(#fff, .1)
      border-bottom 1px solid rgba(#fff, .1)
      p
        margin .5em
        max-height 40px
        overflow hidden
      b
        color #fff
      &:hover .search-keyword
        color #fe2
        transition .3s
        background-color unset
      overflow hidden
      .search-keyword
        background-color #2bf
        color #fff
      .search-result-title
        font-size 1.1em
    #no-result p
      text-align center
